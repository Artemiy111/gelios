{
  "name": "gelios",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "serve:local": "dotenv -e .env -- node .output/server/index.mjs",
    "serve:local:3000": "cross-env PORT=3000 npm run serve:local",
    "serve:local:3001": "cross-env PORT=3001 npm run serve:local",
    "serve:local:3002": "cross-env PORT=3002 npm run serve:local",
    "serve:local:balance": "npm-run-all --parallel serve:local:3000 serve:local:3001 serve:local:3002",
    "postinstall": "nuxt prepare",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:style": "stylelint '**/*.{css,vue}'",
    "lint:style:fix": "stylelint '**/*.{css,vue}' --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun ./server/db/seed.ts"
  },
  "dependencies": {
    "@ark-ui/vue": "^5.5.0",
    "@libsql/client": "^0.15.2",
    "@nuxt/eslint": "^1.3.0",
    "@nuxt/fonts": "^0.11.1",
    "@pinia/nuxt": "^0.10.1",
    "@vee-validate/zod": "^4.15.0",
    "@vueuse/core": "^13.1.0",
    "dotenv-cli": "^8.0.0",
    "drizzle-orm": "^0.41.0",
    "lucide-vue-next": "^0.487.0",
    "modern-normalize": "^3.0.1",
    "nuxt": "^3.16.2",
    "oslo": "^1.2.1",
    "vee-validate": "^4.15.0",
    "vue": "latest",
    "vue-router": "latest",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.6",
    "eslint": "^9.24.0",
    "eslint-plugin-oxlint": "^0.16.5",
    "npm-run-all": "^4.1.5",
    "oxlint": "^0.16.5",
    "cross-env": "^7.0.3",
    "stylelint-config-clean-order": "^7.0.0",
    "stylelint-config-recommended-vue": "^1.6.0"
  }
}
